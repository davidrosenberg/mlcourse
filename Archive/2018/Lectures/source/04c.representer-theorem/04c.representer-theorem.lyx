\pause & = & \left\langle x,x\right\rangle +\left\langle x,x'\right\rangle +\left\langle x',x\right\rangle +\left\langle x',x'\right\rangle \\
\pause & = & \|x\|^{2}+\|x'\|^{2}.
\end{eqnarray*}

\end_inset


\end_layout

